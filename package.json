{
  "name": "react-toastful",
  "version": "0.2.0",
  "description": "Simple, configurable, and customizable React toast library",
  "keywords": [
    "react",
    "toast"
  ],
  "author": "shannonrothe",
  "license": "MIT",
  "repository": "shannonrothe/react-toastful",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "module": "dist/index.js",
  "jsnext:main": "dist/index.js",
  "engines": {
    "node": ">=10"
  },
  "size-limit": [
    {
      "path": "dist/react-toastful.cjs.production.min.js",
      "limit": "4.5kb"
    },
    {
      "path": "dist/react-toastful.esm.js",
      "limit": "4.5kb"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "scripts": {
    "build": "tsdx build",
    "start": "tsdx watch",
    "lint": "tsdx lint",
    "test": "echo \"No test specified\"",
    "analyze": "size-limit --why",
    "size": "size-limit"
  },
  "dependencies": {
    "goober": "^2.0.35",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "zustand": "^3.3.3"
  },
  "peerDependencies": {
    "prop-types": "^15.5.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.1",
    "@types/classnames": "^2.2.11",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/uuid": "^8.3.0",
    "size-limit": "^4.10.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0"
  }
}
