{
  "name": "react-toastful",
  "version": "0.2.2",
  "description": "Simple, configurable, and customizable React toast library",
  "keywords": [
    "react",
    "toast"
  ],
  "author": "shannonrothe",
  "license": "MIT",
  "repository": "shannonrothe/react-toastful",
  "main": "dist/react-toastful.umd.js",
  "module": "dist/react-toastful.es.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "size-limit": [
    {
      "path": "dist/react-toastful.umd.js",
      "limit": "4.5kb"
    },
    {
      "path": "dist/react-toastful.es.js",
      "limit": "4.5kb"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist/",
    "analyze": "size-limit --why",
    "size": "size-limit"
  },
  "dependencies": {
    "goober": "^2.0.35",
    "zustand": "^3.3.3"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.1",
    "@types/classnames": "^2.2.11",
    "@types/react": "^17.0.3",
    "@types/uuid": "^8.3.0",
    "prettier": "^2.3.0",
    "size-limit": "^4.10.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "vite": "^2.3.2"
  }
}
